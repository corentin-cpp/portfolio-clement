---
import '../styles/global.css';

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="fr">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
	</head>
	<body class="bg-dark-bg text-white min-h-screen">
		<nav class="fixed w-full bg-dark-surface/90 backdrop-blur-sm z-50">
			<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
				<div class="flex items-center justify-between h-16">
					<div class="flex-shrink-0">
						<a href="/" class="text-xl font-bold text-accent">BOÉRO CLÉMENT</a>
					</div>
					<div class="hidden md:block">
						<div class="ml-10 flex items-baseline space-x-4">
							<a href="/" class="hover:text-accent transition-colors">Accueil</a>
							<a href="/galerie" class="hover:text-accent transition-colors">Galerie</a>
							<a href="/contact" class="hover:text-accent transition-colors">Contact</a>
						</div>
					</div>
					<div class="md:hidden">
						<button type="button" class="text-gray-light hover:text-accent">
							<svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
								<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
							</svg>
						</button>
					</div>
				</div>
			</div>
		</nav>

		<div class="relative h-[60vh] w-full">
			<div class="absolute inset-0">
				<img
					src="/banner.jpg"
					alt="Bannière"
					class="w-full h-full object-cover"
				/>
				<div class="absolute inset-0 bg-black/60"></div>
			</div>
			<div class="relative h-full flex flex-col items-center justify-center text-center px-4 pt-16">
				<h1 class="text-5xl md:text-7xl font-bold mb-4">BOÉRO CLÉMENT</h1>
				<p class="text-xl md:text-2xl text-gray-light max-w-2xl">
					Capturons ensemble l'essence de vos moments précieux
				</p>
			</div>
		</div>

		<main>
			<slot />
		</main>

		<footer class="bg-dark-surface mt-20 py-8">
			<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
				<div class="text-center">
					<p class="text-gray-400">&copy; {new Date().getFullYear()} HOFFMANN Corentin - Tous droits réservés.</p>
				</div>
			</div>
		</footer>
	</body>
</html>

<style is:global>
	:root {
		--accent: 255, 255, 255;
	}
	html {
		font-family: system-ui, sans-serif;
		background-color: #000000;
		color: white;
	}
</style>
